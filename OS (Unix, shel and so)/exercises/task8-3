#!/bin/bash

#(COPYREADABLE) Да се състави командна процедура, която получава в командния ред при стартиране един параметър – символен низ. Ако не съществува поддиректория на началната директория на потребителя, стартирал процедурата, с име, съвпадащо с подадения низ, процедурата я създава. Копира в тази директория всички обикновени файлове от текущата директория, които са достьпни за четене и извежда на стандартния изход броя на останалите.

declare dir1

read dir1

if test ! -d $HOME/$dir1
then
	mkdir $HOME/$dir1
fi

num=0
for var in *
do
	if test -f $var -a -r $var
	then cp $var $HOME/$dir1
	else `expr $num + 1`
	fi
done
echo "Number of non readable files = $num"
